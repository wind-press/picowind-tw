{% extends "base.twig" %}

{% block content %}

{# Archive Header Section #}
<section class="py-12 bg-base-200 text-center">
    <div class="container mx-auto px-4">
        <h1 class="text-5xl font-bold mb-4">{{ title }}</h1>

        {# Category/Tag Description #}
        {% if term and term.description %}
            <div class="text-lg text-base-content/70 max-w-2xl mx-auto prose">
                {{ term.description }}
            </div>
        {% endif %}
    </div>
</section>

{# Archive Posts Grid #}
<section class="py-12">
    <div id="container-content-archive" class="container mx-auto px-4 max-w-7xl">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for post in posts %}
                {% include 'components/post-card.twig' with {post: post} %}
            {% else %}
                <div class="col-span-full text-center py-12">
                    <div class="alert alert-info max-w-md mx-auto">
                        {{ ux_icon("lucide:info", {class: "w-6 h-6"}) }}
                        <span>{{ __('Sorry, no posts matched your criteria.', 'picowind-tw') }}</span>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Pagination #}
        {% if posts.pagination.pages %}
            <div class="flex justify-center mt-12">
                {% include 'components/pagination.twig' %}
            </div>
        {% endif %}
    </div>
</section>

{% endblock %}
